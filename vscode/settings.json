{
    "workbench.colorTheme": "onehalf-light",
    "files.eol": "\n",
    // Cursor position does not change when clicking to focus on VSCode window.
    "window.clickThroughInactive": false,
    "editor.fontFamily": "Fira Mono",
    "editor.fontSize": 12,
    "editor.tabSize": 2,
    "files.associations": {
        ".*/BUILD": "starlark",
        ".*/METADATA": "starlark",
        ".*/WORKSPACE": "starlark",
        "*.gss": "css"
      },
    "bazel.executable": "blaze",
    "workbench.settings.enableNaturalLanguageSearch": false, // natural language search provided by a Microsoft online service.
    "editor.rulers": [
        80,
        120
    ],
    "[git-commit]": {
        "editor.rulers": [
            50
        ]
    },
    "[python]": {
        "editor.rulers": [
            80
        ]
    },
    "[java]": {
        "editor.rulers": [
            100
        ]
    }
}